# Variables de entorno para Docker Compose
# Base de datos PostgreSQL
POSTGRES_DB=segurosflex
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin123

# Base de datos MySQL
MYSQL_ROOT_PASSWORD=admin123
MYSQL_DATABASE=segurosflex
MYSQL_USER=mysql_user
MYSQL_PASSWORD=admin123

# Configuración de microservicios
NODE_ENV=production

# URLs de la aplicación
CLIENT_URL=http://localhost:3000
API_BASE_URL=http://localhost:80

# Configuración de JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Configuración de Cloudinary (si se usa)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Configuración de correo (si se usa)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Configuración de Stripe (si se usa)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Puerto de cada microservicio
BENEFICIARIOS_PORT=4000
PERSONAL_GESTION_PORT=4001
PRESUPUESTO_PAGOS_PORT=4002
TALLERES_PROVEDORES_PORT=4003
SECURITY_PORT=4004
